

@model IEnumerable<ProyectoTrabajos.Models.ofertas>

@{

    ViewData["Title"] = "Principal Page";
}


<body style="background-color:#4b4c81">

    

    @*Codigo quienes somos*@
    <div class="shadow p-3 mb-5 rounded mt-5" style="background-color:#cfcede">
        <h2 class="text-sm-center fw-bold p-2">¿Quienes Somos?</h2>
        <h3 class="fs-5 px-5 pb-4">
            Somos una Pagina creada para poder promocionar las mejores ofertas de empleo,
            de esta forma buscamos que muchas persona puedan conocer de los empleos disponibles.
        </h3>
    </div>
    @*Fin codigo quienes somos*@


    @*Muestra de ofertas de empleos*@

    <div class="shadow p-2 mb-2 rounded mt-5" style="background-color:#cfcede">


        <item>
            <div class="container">
                <div class="row">

                    @foreach(var empresas in (IEnumerable<dynamic>) ViewData["empresa"]){
                        
                        
                        <div class="col order-sm-4 px-5 py-2" style="border-left: 1px solid rgba(20,0,0,0.2);">

                             
                            <div class="row">
                                <div class="col-sm-1 col-md-1">
                                        <i class="bi bi-newspaper" style="font-size:23px;" ></i>
                                    </div>
                                <div class="col-sm-1 offset-sm-2 col-md-1 offset-md-0">
                                    <h4>@empresas.area</h4>
                                </div>
                            </div>
                            <p class="py-2">@empresas.cargo</p>
                            <div class="row">
                                <div class="col-sm-2 col-md-2" style="border-left: 1px solid rgba(50,0,0,0.3);">
                                    <p>@empresas.experiencia</p>
                                </div>
                                <div class="col-sm-2 offset-sm-2 col-md-2 offset-md-4" style="border-left: 1px solid rgba(50,0,0,0.3);">
                                <p>@empresas.contratacion</p>
                                </div>
                            </div>
                            
                            

                    </div>
                    }
            
                </div>
            </div>

                
            </item>
    </div>
    
    @*Fin del codigo de la muestra de empleos*@


    @*Codigo Marcas*@

    <div class="shadow p-2 rounded mt-5" style="background-color:#cfcede ">

        <div class="container">
            <div class="row p-3">
                <div class="col order-last ">
                    <img src="./css/imagenes/Logo-Vidri.jpg" class="w-75 d-flex mx-auto "/>
                </div>

                <div class="col">
                    <img src="./css/imagenes/McDonald's_logo.svg.png" class="w-100 mx-3" />
                </div>
                <div class="col order-first">
                    <img src="./css/imagenes/Yamaha-Logо.jpg" class="w-100 d-flex mx-auto mt-4" />
                </div>
            </div>

        </div>
    </div>

    @*Fin del Codigo Marcas*@


    @*Capita empleados y carrusel de testimonios*@

    <div class="container py-5">
        <div class="row">
            <div class="col-sm-5 col-md-6 " style="background-color:#cfcede">
                <h3 class="text-sm-center py-3 mx-5 " ;">CAPACITA EMPLEADOS</h3>
            </div>


            @*Codigo Carrusel testimonios*@
            <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0 mx-auto">
                <h3 class="text-sm-center py-3 mx-5 " style="background-color:rgba( 207,206,222,40%);">TESTIMONIOS</h3>
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

                    <div class="carousel-inner">

                        @{
                            int i = 0;
                        }
                        @foreach (var item in (IEnumerable<dynamic>)ViewData["testimonios"])
                        {
                            i++;
                            var active = i == 1 ? "carousel-item active" : "carousel-item";
                            <div class="@active">
                                <div class="card mx-auto" style="width: 15rem;">
                                    <img src="./css/imagenes/Usuario3.png" class="card-img-top img-fluid mx-auto d-block w-50 mt-4" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.nombre</h5>
                                        <p class="card-text">@item.descripcion</p>
                                        <div class="row align-items-start pt-2">
                                            <div class="col-6 col-sm-6 order-sm-first" style="border-left: 1px solid rgba(50,0,0,0.3);">
                                                <p class="text-sm-start">@item.empresa</p>
                                            </div>
                                            <div class="col-6 col-sm-6 order-sm-last" style="border-left: 1px solid rgba(50,0,0,0.3);">
                                                <p class="text-sm-start">@item.cargo</p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    @*Fin de codigo de empleados y testimonios*@

    @*codigo de las Metricas*@

    <h1 class="text-sm-center text-white" style="margin-top:-30px">Metricas</h1>

    <div class="shadow p-2 rounded mt-4" style="background-color:#cfcede">

        <div class="container">
            <div class="row p-3">
                <div class="col order-last">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">Usuarios</a>
                </div>
                @{
                    var Contar = ViewData["contar"] as int?;
                    var ContarP = ViewData["contarPlazas"] as int?;

                <div class="col">
                        <a href="" class="btn btn-outline-primary" style="text-decoration:none"><p class="text-uppercase">@Contar - Empresas</p></a>
                    <div class="row align-items-sm-end">
                        <div class="col">
                            <a href="" class="btn btn-outline-primary mt-3" style="text-decoration:none">Activo</a>
                        </div>

                    </div>
                </div>
                }
                <div class="col order-first">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">@ContarP - Plazas</a>
                    <div class="row align-items-sm-end">
                        <div class="col">
                            <a href="" class="btn btn-outline-primary mt-3" style="text-decoration:none">Activo</a>
                        </div>

                    </div>
                </div>
                <div class="col order-last">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">Aplicaciones</a>
                </div>
            </div>
        </div>

    </div>
   
    @*Fin codigo de las metricas*@


 
    </body>